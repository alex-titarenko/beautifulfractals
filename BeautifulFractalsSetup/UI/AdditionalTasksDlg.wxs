<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Fragment>
    <UI>
      <Dialog Id="AdditionalTasksDlg" Width="370" Height="270" Title="!(loc.WelcomeDlg_Title)">
        <!-- Header -->
        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="!(loc.CustomizeDlgBannerBitmap)" />
        <Control Id="Title" Type="Text" X="15" Y="6" Width="210" Height="15" Transparent="yes" NoPrefix="yes" Text="{\WixUI_Font_Title}Select Additional Tasks" />
        <Control Id="Description" Type="Text" X="25" Y="23" Width="280" Height="15" Transparent="yes" NoPrefix="yes" Text="Which additional tasks should be performed?" />
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="2" />

        <!-- Body -->
        <Control Id="FullDescription" Type="Text" X="24" Y="58" Width="295" Height="30" NoWrap="no" Text="Select the additional tasks you would like Setup to perform while installing [ProductName], then click Next." />

        <Control Id="DefaultScreensaver" Type="Text" X="24" Y="90" Width="295" Height="15" Text="Default screensaver:" />
        <Control Id="MakeDefaultScreensaver" Type="CheckBox" Height="18" Width="295" X="26" Y="103" Text="Make [ProductName] as default screensaver" Property="DEFAULT_SCREENSAVER" CheckBoxValue="1" />
        
        <Control Id="Shortcuts" Type="Text" X="24" Y="128" Width="295" Height="15" Text="Additional icons:" />
        <Control Id="ShortcutDesktop" Type="CheckBox" Height="18" Width="295" X="26" Y="141" Text="Create a desktop icon" Property="SHORTCUT_DESKTOP" CheckBoxValue="1" />
        <Control Id="ShortcutProgramMenu" Type="CheckBox" Height="18" Width="295" X="26" Y="158" Text="Create icons in start menu programs folder" Property="SHORTCUT_PROGRAMMENU" CheckBoxValue="1" />

        <!-- Footer -->
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="2" />
        
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)">
          <Publish Event="NewDialog" Value="InstallDirDlg" Order="10" />
        </Control>
        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="!(loc.WixUINext)">
          <Publish Event="NewDialog" Value="VerifyReadyDlg" Order="10" />
        </Control>
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
          <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
        </Control>
      </Dialog>
    </UI>
	</Fragment>
</Wix>